<%- include ('./partials/header') %>

<div id = "header">
    <div class="row">
        <h1> Weather App</h1>
        <div style="width: 30%; margin: 25px auto;">
            <form action="/weather" method="post">
                <div class="form-group">
                    <input class="form-control" type="text" name="city" placeholder="city" required>
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block" onclick="myFunction()">Get Weather!</button>
                </div>
            </form>
                <div class="alert alert-success" style="display:none" id="grn_alert">
            </div>
        </div>
    </div>
</div>

<div class = "container">
    <div class = "temprature"><span><%- temprature %>C</span></div>
    <div class = "description">
        <div class = "condition"><%- description %></div>
        <div class = "location"><%- city %></div>
    </div>
</div>

